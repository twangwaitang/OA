
{% extends 'home-base.html.twig' %}

  {% block stylesheets %}
      {{ parent() }}
      <style>
          .blog{
              height: 30px;
              line-height: 30px;
                border-bottom: 1px #cccccc dashed;
          }
          .blog span{
              float: right;
          }
      </style>
  {% endblock  %}
{% block body %}
    <body class="backg_huibai">
    {% block content %}
        <div class="clear"></div>
        <div class="content">
            <div class="margin10">
                <a href="{{ path('profilo_blog',{'username':app.user.username}) }}">返回</a>
            </div>
            <div class="margin10">
                <div class="title" style="text-align: center"><h4>{{ blog.title }}</h4></div>
                <p style="text-align: center">{{ blog.createdTime|date("Y-m-d") }}</p>
               <div style="color: #898989">{{ blog.content | raw}}</div>
            </div>
        </div>

    {% endblock %}
    <div class="modal fade" id="blog_show_modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="overflow-y:auto">
        <div class="modal-dialog" style="width:700px; ">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="form-group">
                        <input name="name" type="text" placeholder="请输入日志名称" class="form-control"
                               id="blog_title_name"
                               required=""
                               maxlength="20"
                               minlength="2"
                        >
                    </div>
                    <textarea id="post_blog"></textarea>
                    <button type="submit" class="btn btn-primary" id="blog_submit">保存</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
    {{ include('common/loading.html.twig') }}
    {% block javascript %}
        {{ parent() }}
        <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js')}}"></script>
        <script src="{{ asset('js/blog.js')}}"></script>
    {% endblock  %}
    </body>
{% endblock %}














