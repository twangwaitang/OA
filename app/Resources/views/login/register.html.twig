{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .loginscreen{
            font-family: '微软雅黑 Light';
        }
    </style>
{% endblock %}

{% block body %}
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">OA</h1>

            </div>
            <h3>O A 用户注册</h3>
            {#<ul>#}
            {#{% for error in errors %}#}
            {#<li>{{ error.message }}</li>#}
            {#{% endfor %}#}
            {#</ul>#}

            {#<div class="form-group">#}
            {#<input type="email" class="form-control" placeholder="用户名" required="">#}
            {#</div>#}
            {#<div class="form-group">#}
            {#<input type="password" class="form-control" placeholder="密码" required="">#}
            {#</div>#}
            {#<button type="submit" class="btn btn-primary block full-width m-b">登 录</button>#}
            {{ form_start(form) }}
                {{ form_row(form.username,{'attr': {'placeholder':'5-10位用户名','maxlength':10,'minlength':5}}) }}
                {{ form_row(form.password.first,{'attr': {'placeholder':'5-10位密码'}}) }}
                {{ form_row(form.password.second,{'attr': {'placeholder':'密码确认'}}) }}
                {{ form_row(form.age,{'attr': {'placeholder':'请输入年龄'}}) }}
                {{ form_row(form.email,{'attr': {'placeholder':'请输入邮箱'}}) }}
                {{ form_widget(form.add,{'attr': {'class':'btn btn-primary block full-width m-b'}}) }}
            {{ form_end(form) }}
            <p class="text-muted text-center"> <a href="{{ path('login') }}">返回</a>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}


